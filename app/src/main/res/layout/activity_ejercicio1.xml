<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ejercicio1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="arey.es.tema2_hoja4.Ejercicio1">

    <Button
        android:text="@string/button1EjDirectCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonEj1DirectCall"
        android:onClick="directCall" />

    <Button
        android:text="@string/button2Ej1SetAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonEj1DirectCall"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/button2Ej1SetAlarm"
        android:onClick="setAlarm" />
</RelativeLayout>
